<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @list.name %></h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
  <% @list.bookmarks.each do |bookmark| %>
    <%= bookmark.movie.title %> <%= link_to "Delete", bookmark_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %><br />
  <% end %>
  <%= link_to "Back to list", lists_path %>
</div>
