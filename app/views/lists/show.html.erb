<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1682125771198-f7cbed7cb868?q=80&w=1160&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row mt-3">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= @list.name %></h1>
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    </div>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-6">
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> <i class="fa-solid fa-star text-info"></i></h2>
              <p><%= bookmark.movie.overview %></p>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <div>
                  <i class="fa-solid fa-quote-left"></i>
                  <%= bookmark.comment %>
                </div>
                <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
