<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1682125771198-f7cbed7cb868?q=80&w=1160&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row mt-4">
    <div class="d-flex justify-content-end mb-3">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    </div>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-6">
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> <i class="fa-solid fa-star text-info"></i></h2>
              <p><%= bookmark.movie.overview %></p>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <div>
                  <i class="fa-solid fa-quote-left"></i>
                  <%= bookmark.comment %>
                </div>
                <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row my-5">
    <div class="col-md-6">
      <h2>Reviews</h2>
      <% if @list.reviews.length > 0 %>
        <% @list.reviews.each do |review| %>
          <div class="border-bottom">
            <% 5.times do |index| %>
              <% if index >= review.rating %>
                <i class="fa-solid fa-star"></i>
              <% else %>
                <i class="fa-solid fa-star text-info"></i>
              <% end %>
            <% end %>
            <small><%= review.created_at %></small>
            <p><%= review.comment %></p>
          </div>
        <% end %>
      <% else %>
        <p>There is no review yet!</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= render "reviews/form", list: @list, review: @review %>
    </div>
  </div>
</div>
